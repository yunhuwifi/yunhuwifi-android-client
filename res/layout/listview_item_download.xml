<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

           <RelativeLayout
		          android:padding="10dip"
		          android:layout_width="fill_parent"
	              android:layout_height="wrap_content"
				android:background="@drawable/itembg"
	                  android:descendantFocusability="blocksDescendants" 
		          >

		          <LinearLayout
		              android:layout_width="match_parent"
		              android:layout_height="wrap_content"
		              android:layout_toLeftOf="@+id/layDowning"
		              android:layout_toRightOf="@+id/ivDowning"
		              android:orientation="vertical"
		              android:layout_marginLeft="8dip"
		              android:layout_marginRight="8dip"
		              android:layout_centerVertical="true"
		               >

					          <TextView
					              android:id="@+id/tvDowningTitle"
					              android:layout_width="wrap_content"
				              	  android:layout_height="fill_parent"
				              	  android:layout_weight="1"
				              	  android:text="标题 "
				              	  android:padding="2dip"
				              	   android:focusable="false"
				              	  android:textColor="@drawable/cancelfontcolor"
				              	  style="@style/text_large"
				              	  android:gravity="center"
					              />
							   <LinearLayout 
							          android:layout_width="match_parent"
						              android:layout_height="wrap_content"
						              android:orientation="horizontal"
						              	  android:layout_weight="1">
					          <TextView
					              android:id="@+id/tvDowningSpeed"
					              android:layout_width="wrap_content"
					              android:layout_height="wrap_content"
					              android:layout_weight="1"
					               style="@style/text_small"
					              android:text="200KB/s" />
					          <TextView
					              android:id="@+id/tvDowningState"
					              android:layout_width="wrap_content"
					              android:layout_height="wrap_content"
					              android:layout_weight="1"
					              android:gravity="right"
					               style="@style/text_small"
					              android:visibility="visible"
					              android:text="下载中" />
							</LinearLayout>
			          <ProgressBar 
			               android:layout_width="fill_parent"
						    android:layout_height="2dp"
						 	 android:id="@+id/pbdowning"
              				 style="?android:attr/progressBarStyleHorizontal"
			              	  android:layout_weight="1"
			              	  android:visibility="visible"
			              	  android:progress="20"
			              	  android:max="100"
			              	  android:indeterminateOnly="false"
			              	  android:focusable="false"
			              	  android:progressDrawable="@drawable/pbselector"
			              />
							          <LinearLayout 
							          android:layout_width="match_parent"
						              android:layout_height="wrap_content"
						              android:orientation="horizontal"
						              	  android:layout_weight="1"
						              	  android:padding="2dp"
						         	 >

					               <LinearLayout
					                   android:layout_width="90dp"
					                   android:layout_height="wrap_content"
					                   android:layout_weight="0.09"
					                   android:visibility="visible"
					                   android:orientation="horizontal" >
					          
							          <TextView
							              android:id="@+id/tvDowningSize"
							              android:layout_width="wrap_content"
						              	  android:layout_height="fill_parent"
						              	   android:focusable="false"
						              	  style="@style/text_small"
						              	  android:gravity="center"
						              	  android:text="500MB"
							              />
							           <TextView
							              android:id="@+id/tvDowningtime"
							              android:layout_width="wrap_content"
						              	  android:layout_height="fill_parent"
						              	  android:layout_marginLeft="10dp"
						              	   style="@style/text_small"
						              	  android:gravity="center"
						              	  android:text="2014-11-11"
						              	  android:visibility="visible"
						              	  />
							           </LinearLayout>
										
					                <TextView
					              android:id="@+id/tvDowningPercent"
					              android:layout_width="wrap_content"
					              android:layout_height="wrap_content"
					              android:layout_weight="0.09"
					              android:gravity="right"
					              android:text="20%" 
					               style="@style/text_small"
					              android:visibility="visible"
					              />
					                
				         		 	</LinearLayout>
		          </LinearLayout>
		          <LinearLayout 
		              
			              android:id="@+id/layDowning"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:orientation="horizontal"
			                         android:layout_alignParentRight="true"
			               android:layout_centerVertical="true"
		              >
 					<Button
			              android:id="@+id/btnDowning"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:focusable="false"
			              android:layout_marginRight="15dp"
			              android:background="@drawable/continueicon"
			             />
 					<CheckBox
			              android:id="@+id/cbdowning"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			   
			              android:focusable="false"
			              android:layout_marginRight="15dp"
			              android:visibility="gone"
			              style="@style/checkboxtheme" />
		          
				</LinearLayout>

		          <ImageView
		              android:id="@+id/ivDowning"
		              android:layout_width="wrap_content"
		              android:layout_height="wrap_content"
		              android:layout_alignParentLeft="true"
		              android:layout_centerVertical="true"
		              android:scaleType="fitXY"
		              android:src="@drawable/launcher"
		              android:visibility="visible" />

		      </RelativeLayout>   
		      
</LinearLayout>