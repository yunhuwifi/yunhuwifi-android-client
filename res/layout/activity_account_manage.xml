<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@color/white"
    tools:context=".AccountManageActivity"
    >
   <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <include layout="@layout/header" />
    </LinearLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:padding="10dp"
       android:background="@drawable/avatarbgframe" >

       <ImageView
           android:id="@+id/nameicon"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
           android:background="@drawable/userbgicon"
           android:padding="1dp"
           android:scaleType="fitXY"
           android:src="@drawable/launcher" />

       <TextView
           android:id="@+id/accountname"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_toRightOf="@+id/nameicon"
           android:padding="10dp"
           android:text="云狐"
           android:textColor="#000"
           android:textSize="18sp" />

       <ImageView
           android:id="@+id/checkedicon"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:layout_marginRight="20dp"
           android:src="@drawable/checkedlist" />
   </RelativeLayout>
    
   		<RelativeLayout
   		    android:id="@+id/layoutchange"
   		     android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/laylistbg"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" 
            >

   			<TextView
   			    android:id="@+id/textView1"
   			    android:layout_width="wrap_content"
   			    android:layout_height="wrap_content"
   			    android:layout_alignParentLeft="true"
   			    android:layout_centerVertical="true"
   			     android:layout_marginLeft="10dp"
   			     style="@style/text_normal"
   			    android:text="修改密码" />

   			<ImageView
   			    android:id="@+id/imageView2"
   			    android:layout_width="wrap_content"
   			    android:layout_height="wrap_content"
   			    android:layout_alignParentRight="true"
   			    android:layout_centerVertical="true"
   			    android:layout_marginRight="10dp"
   			    android:src="@drawable/nexticon" />
   		    
   		</RelativeLayout>

   		<RelativeLayout
   		    android:layout_width="fill_parent"
   		    android:layout_height="wrap_content"
   		    android:layout_marginRight="10dp" 
   		    android:layout_marginLeft="10dp" 
   		    android:layout_marginBottom="20dp" >

			<Button
			    android:id="@+id/btnexit"
			    style="@style/hintButton"
			    android:layout_alignParentLeft="true"
			    android:layout_alignParentBottom="true"
			    android:text="退出"
			   />

   		</RelativeLayout>

</LinearLayout>