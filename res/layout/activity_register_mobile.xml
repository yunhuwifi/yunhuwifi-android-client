<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
     tools:context=".RegisterMobileActivity"
     >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:orientation="vertical" >

        <com.yunhuwifi.view.ClearEditText
            android:id="@+id/txtPhone"
            style="@style/normalEditText"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/icon_phone"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical" >

        <com.yunhuwifi.view.PasswordEditText
            android:id="@+id/txtPassword"
            style="@style/normalEditText"
            android:drawableLeft="@drawable/icon_lock"
            android:ems="10"
            android:hint="请输入6-18位密码"
            android:inputType="textPassword" />
    </LinearLayout>



        <Button
            android:id="@+id/btnNext"
            style="@style/buttonPrimary"
            android:visibility="visible"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
            android:text="获取验证码" />

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/cbagree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/checkboxtheme"
 />

    <TextView
        android:id="@+id/txtlink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      	 android:text="@string/protocollink"
      	 android:textColor="@color/black"
      	 android:layout_marginLeft="2dp"
        android:textColorHint="@color/frametitlecolor"
        />

	</LinearLayout>
</LinearLayout>