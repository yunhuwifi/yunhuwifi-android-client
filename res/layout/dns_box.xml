<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#99232323" >

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/umeng_update_dialog_bg"
        android:orientation="vertical" >


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                 android:id="@+id/dialogtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="DNS服务器地址"
                android:textSize="18sp"
                android:textColor="@color/black" />
            
        </RelativeLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/line"
           />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.yunhuwifi.view.ClearEditText
					android:id="@+id/first"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:background="@drawable/listviewbgnormal"
                    android:textColor="@color/black" />
                    <!--  android:hint="首选DNS服务器地址"
                     android:hint="备用DNS服务器地址" -->
                <com.yunhuwifi.view.ClearEditText
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
					android:id="@+id/backup"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:textSize="12sp"
                    android:padding="10dp"
                    android:background="@drawable/listviewbgnormal"
                    android:textColor="@color/black" />
            </LinearLayout>
        </ScrollView>
        
  <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/line"
           />
  <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:padding="5dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
               	android:background="@drawable/umeng_update_button_cancel_bg_selector"
               	android:textColor="@drawable/cancelfontcolor"
               	 android:onClick="cancel"
                android:text="取消" />

            <LinearLayout
                android:layout_width="5dp"
                android:layout_height="fill_parent"
                android:background="#fff" />

            <Button
                android:id="@+id/ok"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/umeng_update_button_ok_bg_selector"
                android:textColor="@color/white"
                android:onClick="ok"
                android:text="确定" />
        </LinearLayout>
 </LinearLayout>      

</RelativeLayout>
