        android:id="@+id/start_button"
        style="@style/testButton"
        android:layout_below="@+id/layscale"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="开始测速" />

</RelativeLayout>