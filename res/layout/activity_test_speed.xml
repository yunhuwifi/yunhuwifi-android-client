<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/testspeedbgicon" >

    <LinearLayout
        android:id="@+id/llyt"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:padding="10dp"
         >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
             >

            <Button
                android:id="@+id/btnback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/back" />

            <TextView
                android:id="@+id/txtheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="体检测速"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_speed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llyt"
        android:background="@drawable/bg_speed"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="#0055cd"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                style="@style/text_white"
                android:text="当前速度"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/now_speed"
                style="@style/text_blue"
                android:maxLength="6"
                android:layout_marginTop="4.0dip" />
        </LinearLayout>
  <TextView
            android:layout_width="2dp"
            android:layout_height="fill_parent"
          />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:background="#0055cd"
            android:orientation="vertical" >

            <TextView
                style="@style/text_white"
                android:text="平均速度"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/average_speed"
                style="@style/text_blue"
                android:layout_marginTop="4.0dip" />
        </LinearLayout>

        <TextView
            android:layout_width="2dp"
            android:layout_height="fill_parent"
             />

        <LinearLayout
            android:id="@+id/llyt_average_speed"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="#0055cd"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                style="@style/text_white"
                android:text="最小值" />

            <TextView
                android:id="@+id/min_speed"
                style="@style/text_blue"
                android:layout_marginTop="4.0dip" />
        </LinearLayout>
    </LinearLayout>

