<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_layout_01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/itembg"
    android:padding="10dip" >

    <ImageView
        android:id="@+id/ivRouter"
        android:layout_width="36.0dip"
        android:layout_height="36.0dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@drawable/launcher" />

    <ImageView
        android:id="@+id/ivChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:scaleType="fitXY"
        android:focusable="false"
        android:src="@drawable/checkedlist"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/ivChecked"
        android:layout_toRightOf="@+id/ivRouter"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#202020"
            android:text="t"
            android:layout_marginLeft="5dp"
            android:textSize="18sp" />

        <TextView            android:layout_marginLeft="5dp"
            android:id="@+id/tvIPAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#202020"
            android:text="t"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>